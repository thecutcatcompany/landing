<div class="container">
  <div class="row">
    <div class="col">

      <p id="notice"><%= notice %></p>

      <h1>Proyectos</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @proyectos.each do |proyecto| %>
            <tr>
              <td><%= proyecto.nombre %></td>
              <td><%= proyecto.imagen %></td>
              <td><%= proyecto.descripcion %></td>
              <td><%= link_to 'Mostrar', proyecto, class: "btn btn-primary" %></td>
              <td><%= link_to 'Editar', edit_proyecto_path(proyecto), class: "btn btn-secondary" %></td>
              <td><%= link_to 'Eliminar', proyecto, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Proyecto', new_proyecto_path, class: "btn btn-primary mb-4" %>
    </div>
  </div>
</div>